<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/startTest_dialogView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true" >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="-65dp"
    tools:layout_editor_absoluteY="0dp"
    android:background="@color/white">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/description_dialog_il"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:hintTextColor="#388E3C"
        app:layout_constraintEnd_toEndOf="@+id/price_dialog_il"
        app:layout_constraintStart_toStartOf="@+id/price_dialog_il"
        app:layout_constraintTop_toBottomOf="@+id/price_dialog_il">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/description_dialog"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Description"
            tools:layout_editor_absoluteY="4dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ending_time_dialog_il"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:hintTextColor="#388E3C"
        app:layout_constraintEnd_toEndOf="@+id/starting_time_dialog_il"
        app:layout_constraintStart_toStartOf="@+id/starting_time_dialog_il"
        app:layout_constraintTop_toBottomOf="@+id/starting_time_dialog_il"
        app:startIconDrawable="@drawable/ic_clock_1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ending_time_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="Endiing time" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/starting_time_dialog_il"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:hintTextColor="#388E3C"
        app:layout_constraintEnd_toEndOf="@+id/date_dialog_il"
        app:layout_constraintStart_toStartOf="@+id/date_dialog_il"
        app:layout_constraintTop_toBottomOf="@+id/date_dialog_il"
        app:startIconDrawable="@drawable/ic_clock_1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/starting_time_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="Starting time" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/date_dialog_il"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:hintTextColor="#388E3C"
        app:layout_constraintEnd_toEndOf="@+id/address_dialog_il"
        app:layout_constraintStart_toStartOf="@+id/address_dialog_il"
        app:layout_constraintTop_toBottomOf="@+id/address_dialog_il"
        app:startIconDrawable="@drawable/ic_calendar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/date_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="Date" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/address_dialog_il"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:hintTextColor="#388E3C"
        app:layout_constraintEnd_toEndOf="@+id/features_dialog_il"
        app:layout_constraintStart_toStartOf="@+id/features_dialog_il"
        app:layout_constraintTop_toBottomOf="@+id/features_dialog_il"
        app:startIconDrawable="@drawable/ic_map_pin_1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/address_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="Address" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/title_dialog_il"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        app:hintTextColor="#388E3C"
        app:layout_constraintEnd_toEndOf="@+id/training_information"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="@+id/training_information"
        app:layout_constraintTop_toBottomOf="@+id/training_information"
        app:startIconDrawable="@drawable/ic_fitness_center_black_24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/title_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="Title" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/features_dialog_il"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:hintTextColor="#388E3C"
        app:layout_constraintEnd_toEndOf="@+id/title_dialog_il"
        app:layout_constraintStart_toStartOf="@+id/title_dialog_il"
        app:layout_constraintTop_toBottomOf="@+id/title_dialog_il"
        app:startIconDrawable="@drawable/ic_activity_1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/features_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="Features" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/price_dialog_il"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:hintTextColor="#388E3C"
        app:layout_constraintEnd_toEndOf="@+id/ending_time_dialog_il"
        app:layout_constraintStart_toStartOf="@+id/ending_time_dialog_il"
        app:layout_constraintTop_toBottomOf="@+id/ending_time_dialog_il"
        app:startIconDrawable="@drawable/ic_noun_shekel_3452110">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/price_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="Price" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/training_information"
        android:layout_width="186dp"
        android:layout_height="32dp"
        android:layout_marginTop="50dp"
        android:text="Training information"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>