<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchTrainerProfileActivity">

    <EditText
        android:id="@+id/search_trainer_edtxt"
        android:layout_width="375dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/search_trainer_bg"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:ems="10"
        android:hint="Search for a trainer..."
        android:inputType="textPersonName"
        android:padding="16dp"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_to_training_search" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trainers_recyclerview"
        android:layout_width="409dp"
        android:layout_height="435dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_trainer_edtxt"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/switch_to_training_search"
        android:layout_width="377dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#e0f2f1"
        android:text="Switch to training search"
        android:textColor="@color/black"
        app:icon="@drawable/ic_arrow_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/search_trainer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Search"
        android:textColor="@color/black"
        android:backgroundTint="#e0f2f1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainers_recyclerview" />
</androidx.constraintlayout.widget.ConstraintLayout>