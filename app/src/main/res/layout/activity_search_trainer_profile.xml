<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchTrainerProfileActivity">

    <EditText
        android:id="@+id/search_trainer_bar"
        android:layout_width="403dp"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/search_trainer_bg"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:ems="10"
        android:hint="Search for a trainer..."
        android:inputType="textPersonName"
        android:padding="16dp"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/return_to_search_training" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trainers_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_trainer_bar"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/return_to_search_training"
        android:layout_width="325dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey_400"
        android:text="Back to training search"
        app:icon="@drawable/ic_arrow_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>